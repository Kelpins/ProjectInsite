{% extends "base.html.j2" %}

{% block title %}

<title>{{page_title}}</title>

{% endblock title %}

{% block head %}


<div id="header"
  class="slant-header container-fluid d-flex justify-content-center"
  style="
    height: {{head_height}};
    background-image: linear-gradient({{head_color}},{{head_color}} ), url(' {{head_img}} ');
    background-position: {{head_img_pos}} ;
    background-attachment:scroll;
    "
>

    <div id="header-contents" 
      class="d-flex flex-column justify-content-center align-items-start"
      style="width: 80%"
    >
        <h1 class="mt-4 mb-4">{{page_header}}</h1>
        <p class="mt-4 mb-4"> {{page_subheader}} </p>

    </div>
 
</div>

{% endblock %}

{% block body %}

<!-- Heading -->

<div id="main-top"
  class="container mt-5"
  style="width: 80%"
>
  <h1>{{body_title}} </h1>
  <p>{{body_subtitle}} </p>
</div>
<div id="main-body"
  class="container mt-5 mb-5"
  style="width: 80%"
>

  <div id="top-row" class="row">
  {% for card in topCards %}

    <div class="col-4">
        <img src="{{card.img}}" alt="{{card.img_name}}">
        <h3> {{card.heading}} </h3>
        <p> {{card.text}} </p>
    </div>

  {% endfor %}
  </div>

  <div id="bottom-row" class="row">
  {% for card in bottomCards %}

    <div class="col-4">
        <img src="{{card.img}}" alt="{{card.img_name}}">
        <h3> {{card.heading}} </h3>
        <p> {{card.text}} </p>
    </div>

  {% endfor %}
  </div>


</div>

{% endblock %}
